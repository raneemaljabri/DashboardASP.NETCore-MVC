@model DamegedProducts

@{
    ViewData["Title"] = "Damaged Products Page";
}



@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success mt-2">@TempData["SuccessMessage"]</div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger mt-2">@TempData["ErrorMessage"]</div>
}
<div class="container mt-3">
    <div class="row">
        <div class="col text-center">
            <h1 class="display-4 "><span class="badge bg-light bordred text-dark">اضافة المنتج التالف</span> </h1>
        </div>
    </div>

    <div class="row">
        <div class="col">
            <button class="btn btn-success" onclick="showDamagedProductsModal()">  <i class="fs-4 bi-cart-plus p-2"></i> أضافة منتج تالف </button>
        </div>
    </div>
</div>

<div class="modal" tabindex="-1" id="Add-Damaged-Item">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header " style="direction:ltr">
                <h5 class="modal-title"> اضافة المنتج التالف </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form asp-action="CreateDamagedProducts" asp-controller="DamagedProducts" method="post">
                    <div class="row mb-4">
                        <div class="col">
                            <label class="form-label">اختر المنتج</label>
                            <select class="form-select" style="direction:ltr" asp-for="ProductId" id="ProductId">
                                @foreach (var item in ViewBag.products)
                                {
                                    <option value="@item.Id"> @item.Name</option>

                                }
                            </select>
                        </div>
                        <div class="col">
                            <label class="form-label" for="">عدد المنتج </label>
                            <input type="number" id="Qty" asp-for="Qty" class="form-control form-control-sm" />
                        </div>
                    </div>
                    <div class="modal-footer d-flex justify-content-start">
                        <button type="submit" class="btn btn-primary" data-bs-dismiss="modal">اضافة</button>
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">إلغاء الأمر </button>
                    </div>
                </form>
            </div>

        </div>
    </div>
</div>





<div class="row mt-4 text-center" style="direction:rtl">
    <div class="col">
        <div class="card">
            <div class="card-body">
                <table class="table table-bordered text-center">
                    <thead>
                        <tr>
                            <th class="bg-success text-white">#</th>
                            <th class="bg-success text-white">اسم المنتج</th>
                            <th class="bg-success text-white">لون المنتج</th>
                            <th class="bg-success text-white">كمية المنتج</th>
                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var item in ViewBag.damagedProducts)
                        {
                            <tr>
                                <td>@item.ProductId</td>
                                <td>@item.Name</td>
                                <td>@item.Color</td>
                                <td>@item.Qty</td>
                            </tr>
                        }



                    </tbody>

                </table>
            </div>
        </div>
    </div>
</div>